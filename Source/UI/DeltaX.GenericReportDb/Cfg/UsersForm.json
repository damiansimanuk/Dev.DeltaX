      "dense": true
    },
    {
      "widgetName": "FullName",
      "dense": true
    },
    {
      "widgetName": "Email",
      "dense": true
    },
    {
      "type": "DataTable",
      "dense": true,
      "hideFooter": true,
      "label": "Permisos del usuario",
      "loadItems": {
        "prefixItem": "usersroleTable",
        "prefixList": "usersroleTable",
        "mapItemParent": {
          "UserId": "Id"
        },
        "listFields": [
          "RoleName",
          "C",
          "R",
          "U",
          "D"
        ],
        "widgetsOnCreate": [
          {
            "field": "Username",
            "readonly": true,
            "dense": true,
            "bindFlex": {
              "md6": true,
              "xs12": true
            }
          },
          {
            "field": "RolId",
            "type": "Select",
            "label": "Select Rol",
            "required": true,
            "dense": true,
            "itemText": "RoleName",
            "itemValue": "RolId",
            "itemsApi": {
              "prefixList": "rolesSelect"
            },
            "bindFlex": {
              "md6": true,
              "sm6": true,
              "xs12": true
            }
          },
          {
            "widgetName": "Create",
