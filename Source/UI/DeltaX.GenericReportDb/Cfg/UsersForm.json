        "md6": true,
        "xs12": true
      }
    },
    {
      "widgetName": "FullName",
      "readonly": false,
      "required": false
    }
  ],
  "WidgetsOnEdit": [
    {
      "widgetName": "Id",
      "dense": true,
      "disabled": true
    },
